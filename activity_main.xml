<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/ic_launcher_foreground">

  <TextView
      android:id="@+id/city"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="cursive"
      android:text="Udacity"
      android:textSize="50sp"
      android:textStyle="bold" />

  <ImageView
      android:id="@+id/ud"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:scaleType="fitCenter"
      android:src="@drawable/learn" />

<RelativeLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content">
  <TextView
      android:id="@+id/ad"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-condensed"
      android:text="2465 Latham St,"
      android:padding="3dp"
      />

  <TextView
      android:id="@+id/ads"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-condensed"
      android:padding="3dp"
      android:layout_below="@id/ad"
      android:text="Mountain View, CA 94043." />

  <TextView
      android:id="@+id/cal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Call: 650-555-5555"
      android:padding="3dp"
      android:textStyle="bold"
      android:layout_below="@id/ads"
      />

  <TextView
      android:id="@+id/mot"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="“We don’t want to fail fast, but we do want to learn very fast.”"
      android:textStyle="italic"
      android:fontFamily="cursive"
      android:textSize="14dp"
      android:layout_below="@id/cal"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:autoLink="web"
      android:linksClickable="true"
      android:text="www.udacity.com"
      android:fontFamily="casual"
      android:textStyle="bold"
      android:paddingLeft="100dp"
      android:layout_below="@id/mot"

      />
</RelativeLayout>

</LinearLayout>